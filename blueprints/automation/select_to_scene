blueprint:
  name: Select to Scene
  description: |
    Use an input select to change scene in a room
  domain: automation
  input:
    input_select:
      name: Input Select
      description: Input Select to use
      selector:
        entity:
          domain: input_select
          integration: mqtt
mode: restart
max_exceeded: silent
trigger:
  - platform: state
    entity_id: !input "input_select"
action:
  - service: light.turn_on
    target: "light.cuisine_1"
